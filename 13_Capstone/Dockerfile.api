FROM python:3.12-slim

WORKDIR /app

COPY .env common_detect_os.py api_server.py furniture_client_agent.py /app/

RUN pip install --no-cache-dir \
    fastapi \
    "uvicorn[standard]" \
    langchain-openai \
    langchain-mcp-adapters \
    langgraph \
    mcp \
    httpx \
    python-dotenv

EXPOSE 8000

CMD ["uvicorn", "api_server:app", "--host", "0.0.0.0", "--port", "8000"]
